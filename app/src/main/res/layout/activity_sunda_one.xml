<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.activity.sunda.bab1.SundaOneActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_dictionary"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/gray_50"
        app:cardCornerRadius="18dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck"
        tools:layout_editor_absoluteX="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_dictionary"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_dictionary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_vocabulary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/vocab"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/gray_700"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_dictionary"
                app:layout_constraintTop_toTopOf="@+id/iv_dictionary"/>

            <TextView
                android:id="@+id/vocabulary_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/vocab_desc"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/gray_700"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/iv_dictionary"
                app:layout_constraintTop_toBottomOf="@+id/tv_vocabulary"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_voice_games"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/gray_50"
        app:cardCornerRadius="18dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toBottomOf="@+id/cd_dictionary"
        tools:ignore="TextSizeCheck"
        tools:layout_editor_absoluteX="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_voice"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_microphone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="Latihan Berbicara"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/gray_700"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_voice"
                app:layout_constraintTop_toTopOf="@+id/iv_voice"/>

            <TextView
                android:id="@+id/voice_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Belajar lewat latihan berbicara yuk!"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/gray_700"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/iv_voice"
                app:layout_constraintTop_toBottomOf="@+id/tv_voice"
                app:layout_constraintBottom_toBottomOf="@+id/iv_voice"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>